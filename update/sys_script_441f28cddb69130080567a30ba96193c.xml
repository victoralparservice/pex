        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var location = current.location_survey;
    var type = current.survey_type;
	var previousResponsible = previous.responsible;

    var pesquisa = new GlideRecord("x_alabs_pex_instance_survey");
	pesquisa.addEncodedQuery("location=" + location + "^survey.type=" + type + "^state=started^ORstate=pending");
	pesquisa.query();
	
    while (pesquisa.next()){
		pesquisa.state = "finished";
		pesquisa.update();
	}
	
	var gr = new GlideRecord("x_alabs_pex_instance_survey");
		gr.initialize(); 
		gr.responsible = current.responsible;
		gr.first_level_notification = current.first_level;
		gr.second_level_notification = current.second_level;
		gr.state = "pending";
		gr.survey = pesquisa.survey;
		gr.number_of_questions = pesquisa.number_of_questions;
		gr.criado_matriz = true;
		gr.insert();
	
	var grQ = new GlideRecord('x_alabs_pex_surveys_questions');
	grQ.addEncodedQuery("survey.sys_id=" + gr.survey);
	grQ.query();

	while(grQ.next()){	
		var grI = new GlideRecord("x_alabs_pex_instance_survey_question");
		grI.initialize();
		grI.survey_instance = gr.sys_id.toString();
		grI.question = grQ.question;
		grI.situation = "";
		grI.insert();
	}
		

})(current, previous);]]></script>
